<UserControl x:Class="BlockEditor.Views.Controls.MapControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:myControls="clr-namespace:BlockEditor.Views.Controls"
             mc:Ignorable="d" 
             Loaded="OnLoaded"
             d:DesignHeight="450" d:DesignWidth="800"
             PreviewKeyDown="UserControl_PreviewKeyDown">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="LightGreen">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Margin="10,7" Width="50" Content="Undo" FontFamily="Segoe UI" Command="{Binding Game.UserOperations.UndoCommand}" ToolTip="Hotkey: Ctrl + Z" />
                <Button Margin="10,7" Width="50" Content="Redo" FontFamily="Segoe UI" Command="{Binding Game.UserOperations.RedoCommand}" ToolTip="HotKey: Ctrl + Y"/>

                <Button Margin="10,7" Width="50" Content="Select" FontFamily="Segoe UI" Command="{Binding BlockSelection.SelectCommand}" ToolTip="Hotkey: S"/>

                <Button Margin="10,7" Width="100" Content="Rotate Left"  FontFamily="Segoe UI" Command="{Binding BlockSelection.RotateLeftCommand}" ToolTip="Hotkey: L"/>
                <Button Margin="10,7" Width="100" Content="Rotate Right" FontFamily="Segoe UI" Command="{Binding BlockSelection.RotateRightCommand}" ToolTip="Hotkey: R"/>

            </StackPanel>

        </Border>
        
        <Grid 
            Grid.Column="0"
            Grid.Row="1" 
            Grid.RowSpan="99"
            Grid.ColumnSpan="99"
            PreviewMouseDown="Map_PreviewMouseDown"
            PreviewMouseMove="Map_PreviewMouseMove"
            PreviewMouseUp="Map_PreviewMouseUp"
            SizeChanged="Map_SizeChanged"
            Name="GamePanel">
            
            <Image 
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Source="{Binding MapContent, Mode=OneWay}" />

        </Grid>


        <myControls:BlocksControl Grid.Column="2" Grid.Row="1" 
                             x:Name="BlocksControl" 
                             Grid.RowSpan="99" 
                             VerticalAlignment="Center" />

        <myControls:MapButtonsControl x:Name="MapButtons"
            Grid.Column="0"  
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            Margin="50,10,50,20"/>

        <myControls:ZoomControl Grid.Row="2" Grid.Column="1" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center" 
                           x:Name="ZoomControl"
                           Margin="0,10,0,20"/>
    </Grid>
</UserControl>
