<UserControl x:Class="BlockEditor.Views.Controls.MapControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:myControls="clr-namespace:BlockEditor.Views.Controls"
             mc:Ignorable="d" 
             Loaded="OnLoaded"
             d:DesignHeight="450" d:DesignWidth="800"
             PreviewKeyDown="UserControl_PreviewKeyDown"
             Focusable="true">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="88" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                Background="{StaticResource LightBackground}">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Button Margin="10,7,5,7" Width="30" Content="&#128896;" FontWeight="SemiBold" FontSize="22" FontFamily="Segoe UI" Command="{Binding Game.UserOperations.UndoCommand}" ToolTip="Undo &#x0a;Hotkey:  Ctrl + Z"/>
                <Button Margin="0,7,0,7"  Width="30" Content="&#128898;" FontWeight="SemiBold" FontSize="22" FontFamily="Segoe UI" Command="{Binding Game.UserOperations.RedoCommand}" ToolTip="Redo &#x0a;HotKey:  Ctrl + Y"/>

                <ToggleButton IsChecked="{Binding IsSelectionMode, Mode=OneWay}" Margin="25,7,25,7" Width="60" Content="Select" FontWeight="SemiBold" FontFamily="Segoe UI" Command="{Binding BlockSelection.SelectCommand}" ToolTip="Select Multiple Blocks &#x0a;Hotkey:  S"/>

                <Button Margin="0,7,5,7" Width="30" Content="⤹" FontSize="25" FontWeight="Bold" FontFamily="Segoe UI" Command="{Binding BlockSelection.RotateLeftCommand}"  ToolTip="Rotate Blocks Left &#x0a;Hotkey:  L"/>
                <Button Margin="0,7,10,7" Width="30" Content="⤸" FontSize="25" FontWeight="Bold" FontFamily="Segoe UI" Command="{Binding BlockSelection.RotateRightCommand}" ToolTip="Rotate Blocks Right &#x0a;Hotkey:  R"/>

                <Button  Margin="25,7,5,7" Width="40" Content="&#8982;"  FontSize="25" FontWeight="SemiBold" FontFamily="Segoe UI" Command="{Binding StartPositionCommand}" ToolTip="Go to start position&#x0a;Hotkey:  G"/>
                <Grid Width="40" Height="32" Margin="5,7,25,7" ToolTip="Flood Fill&#x0a;Hotkey:  F">
                    <Grid.InputBindings>
                        <MouseBinding Gesture="LeftClick" Command="{Binding FillCommand}" />
                    </Grid.InputBindings>
                    <ToggleButton IsChecked="{Binding IsFillMode, Mode=OneWay}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    <Image Height="22" VerticalAlignment="Center" HorizontalAlignment="Center" Source="../../Resources/GUI/Bucket.png" />
                </Grid>

                <CheckBox IsChecked="{Binding IsOverwrite, Mode=TwoWay}" Margin="25,7,25,7" Height="25" VerticalContentAlignment="Center" Width="100" Content="Overwrite"  FontSize="15" FontWeight="SemiBold" FontFamily="Segoe UI" ToolTip="Overwrite block&#x0a;Hotkey:  O"/>

            </StackPanel>

        </Border>
        
        <Grid 
            Grid.Column="0"
            Grid.Row="1" 
            Grid.RowSpan="99"
            Grid.ColumnSpan="99"
            PreviewMouseDown="Map_PreviewMouseDown"
            PreviewMouseMove="Map_PreviewMouseMove"
            PreviewMouseUp="Map_PreviewMouseUp"
            SizeChanged="Map_SizeChanged"
            Name="GamePanel">
            
            <Image 
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Source="{Binding MapContent, Mode=OneWay}" />

        </Grid>


        <myControls:BlocksControl Grid.Column="2" Grid.Row="1" 
                             x:Name="BlocksControl" 
                             Grid.RowSpan="99" 
                             VerticalAlignment="Center" />

        <myControls:MapButtonsControl x:Name="MapButtons"
            Grid.Column="0"  
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            Margin="50,10,50,20"/>

        <myControls:ZoomControl Grid.Row="2" Grid.Column="1" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center" 
                           x:Name="ZoomControl"
                           Margin="0,10,0,20"/>
    </Grid>
</UserControl>
